<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/rounded_div"
            android:orientation="vertical">

            <TextView
                android:id="@+id/greetings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:fontFamily="sans-serif-black"
                android:text="Welcome,"
                android:textSize="14sp"
                android:typeface="normal" />

            <TextView
                android:id="@+id/username"
                android:layout_width="143dp"
                android:layout_height="38dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="-1dp"
                android:fontFamily="sans-serif-black"
                android:text="Username"
                android:textSize="24sp"
                android:typeface="normal" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnSearch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clipToOutline="true"
                        android:drawableEnd="@android:drawable/ic_menu_search"
                        android:text="Search something ..."
                        android:textAlignment="textStart"
                        android:textAllCaps="false"
                        android:textColor="@color/black" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lineTitlerekomendos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/RecomendedDos"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:fontFamily="sans-serif-black"
                        android:text="Popular Thesis topics"
                        android:textSize="16sp"
                        android:typeface="normal" />

                    <TextView
                        android:id="@+id/btnKePencarian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="400px"
                        android:onClick="textArrowOnclicked"
                        android:text=">"
                        android:textColor="#E49402"
                        android:textSize="19sp"
                        tools:ignore="TouchTargetSizeCheck" />

                </LinearLayout>

                <HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollIndicators="none">

                    <LinearLayout
                        android:id="@+id/linearLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:isScrollContainer="true"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/topTopic1"
                            android:layout_width="278dp"
                            android:layout_height="148dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:alwaysDrawnWithCache="false"
                            android:animateLayoutChanges="false"
                            android:animationCache="false"
                            android:backgroundTint="#D9D5D5"
                            android:clickable="true"
                            android:elevation="128dp"
                            android:fadeScrollbars="true"
                            android:layoutMode="clipBounds"
                            app:cardBackgroundColor="#FFFFFF"
                            app:cardCornerRadius="20dp"
                            tools:ignore="SpeakableTextPresentCheck">

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/topTopic2"
                            android:layout_width="278dp"
                            android:layout_height="148dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:backgroundTint="#D9D5D5"
                            app:cardBackgroundColor="#FFFFFF"
                            app:cardCornerRadius="20dp"></androidx.cardview.widget.CardView>
                    </LinearLayout>

                </HorizontalScrollView>


                <LinearLayout
                    android:id="@+id/lineTitlerekomenTopics"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/RecomendedTopic"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:fontFamily="sans-serif-black"
                        android:text="Topic Category"
                        android:textSize="16sp"
                        android:typeface="normal" />

                    <TextView
                        android:id="@+id/btnKePencarian2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="400px"
                        android:onClick="textArrowOnclicked"
                        android:text=">"
                        android:textColor="#E49402"
                        android:textSize="19sp"
                        tools:ignore="TouchTargetSizeCheck" />
                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="SpeakableTextPresentCheck">

                    <LinearLayout
                        android:id="@+id/linearLayout3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.358"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/RecomendedTopics">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/topCate1"
                            android:layout_width="92dp"
                            android:layout_height="73dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:backgroundTint="#D9D5D5"
                            app:cardCornerRadius="20dp" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/topCate2"
                            android:layout_width="92dp"
                            android:layout_height="73dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:backgroundTint="#D9D5D5"
                            app:cardCornerRadius="20dp">

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/topCate3"
                            android:layout_width="92dp"
                            android:layout_height="73dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:backgroundTint="#D9D5D5"
                            app:cardCornerRadius="20dp">

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/topCate4"
                            android:layout_width="92dp"
                            android:layout_height="73dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:backgroundTint="#D9D5D5"
                            app:cardCornerRadius="20dp">

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/topCate5"
                            android:layout_width="92dp"
                            android:layout_height="73dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:backgroundTint="#D9D5D5"
                            app:cardCornerRadius="20dp">

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                </HorizontalScrollView>

                <LinearLayout
                    android:id="@+id/lineTitlerekomenAdvs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/PopularAdvs"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:fontFamily="sans-serif-black"
                        android:text="Popular Advisors"
                        android:textSize="16sp"
                        android:typeface="normal" />

                    <TextView
                        android:id="@+id/btnKePencarian3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="400px"
                        android:onClick="textArrowOnclicked"
                        android:text=">"
                        android:textColor="#E49402"
                        android:textSize="19sp"
                        tools:ignore="TouchTargetSizeCheck" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:scrollbars="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/topDos1"
                        android:layout_width="318dp"
                        android:layout_height="148dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:alwaysDrawnWithCache="false"
                        android:animateLayoutChanges="false"
                        android:animationCache="false"
                        android:backgroundTint="#D9D5D5"
                        android:clickable="true"
                        android:elevation="128dp"
                        android:fadeScrollbars="true"
                        android:layoutMode="clipBounds"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardCornerRadius="20dp"
                        tools:ignore="SpeakableTextPresentCheck">

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/topDos2"
                        android:layout_width="318dp"
                        android:layout_height="148dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:backgroundTint="#D9D5D5"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardCornerRadius="20dp"></androidx.cardview.widget.CardView>

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/tumbal"
                    android:layout_width="wrap_content"
                    android:layout_height="40px"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="20dp"></androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

