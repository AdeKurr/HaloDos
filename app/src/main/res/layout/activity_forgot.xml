<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ForgotActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="149dp"
        android:layout_height="128dp"
        app:srcCompat="@drawable/logo" />


        <ImageView
            android:layout_width="267dp"
            android:layout_height="263dp"
            android:layout_marginTop="-50dp"
            android:layout_marginStart="100dp"
            android:background="@drawable/forgotpassword" />


    <TextView
        android:layout_width="242dp"
        android:layout_height="103dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="-120dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="sans-serif-black"
        android:text="Forgot  Password?"
        android:textSize="41dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:layout_marginStart="20dp"
        android:layout_marginTop="2dp"
        android:text="Answer the question below to reset your password."
        android:textAlignment="center"
        android:textSize="14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="What is the name of your first pet?"
        android:textSize="20sp"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/inputSecurity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:background="@android:drawable/editbox_background_normal"
        android:drawableEnd="?android:attr/textCheckMark"
        android:ems="10"
        android:hint="  Your answer"
        android:inputType="textPersonName"
        android:minHeight="48dp" />
    <EditText
        android:id="@+id/inputPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="10dp"
        android:background="@android:drawable/editbox_background_normal"
        android:ems="10"
        android:hint="  New password"
        android:inputType="textPassword"
        android:minHeight="48dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remember password?"
            android:layout_marginStart="110dp"
            android:textSize="12sp"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="240dp"
            android:layout_marginStart="-7dp"
            android:fontFamily="sans-serif-black"
            android:text="Log in"
            android:onClick="textOnclicked"
            android:textAlignment="center"
            android:textSize="14sp"
            android:typeface="normal" />

    </LinearLayout>

    <Button
        android:id="@+id/btnSend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="#FFA500"
        android:fontFamily="sans-serif-medium"
        android:text="Send"
        android:textAllCaps="false"
        android:textColor="#050505"
        android:textSize="20sp"
        android:textStyle="normal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" HaloDos "
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:textColor="#7A171717" />


</LinearLayout>